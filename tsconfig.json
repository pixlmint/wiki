{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "app/env.d.ts",
        "app/**/*",
        "app/**/*.vue",
        "app/**/*.ts",
        "app/**/*.tsx"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/src/*"],
            "@style/*": ["./app/style/*"]
        },
        "jsx": "react-jsx",
        "types": ["vite/client"]
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
